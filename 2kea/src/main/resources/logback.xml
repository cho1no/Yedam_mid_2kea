<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>

  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%5level [%logger{35}] - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="co.yedam">
    <level value="DEBUG"/>
  </logger>
  <root level="INFO">
    <appender-ref ref="stdout"/>
  </root>

</configuration>